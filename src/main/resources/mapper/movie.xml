<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.batch.partitioning.exam.job.multithreaded.movie.dao.MovieDao">
    <select id="selectMovieList" resultType="com.batch.partitioning.exam.job.multithreaded.movie.model.Movie">
        SELECT no
              , title
              , content
          FROM movie
         ORDER BY no ASC
         LIMIT #{offset}, #{pageSize}
    </select>

    <insert id="insertMovieTemp" parameterType="String">
        INSERT INTO movie_temp
        (
          title
        , reg_ymdt
        ) VALUES (
          #{movieTitle}
        , NOW()
        )
    </insert>
</mapper>